<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
       <Button
           android:layout_width="170dp"
           android:layout_height="160dp"
           android:layout_marginHorizontal="15dp"
           android:id="@+id/clear_records_btn"
           android:text="清除数据"
           android:background="@drawable/big_round_bg"
           android:drawableTop="@drawable/delete"
           android:paddingTop="30dp"
           style="@style/text_style"

           android:layout_marginTop="20dp"
           android:layout_marginBottom="10dp"

           />
    <Button
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_marginHorizontal="2dp"
        android:id="@+id/clear_pred_btn"
        android:text="清除预测"
        android:background="@drawable/big_round_bg"
        android:drawableTop="@drawable/delete"
        android:paddingTop="30dp"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        style="@style/text_style"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/post_records_btn"
        android:text="上传到服务器"
        android:background="@drawable/big_round_bg"
        android:drawableTop="@drawable/server"
        android:paddingTop="30dp"
        style="@style/text_style"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
        <Button
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:layout_marginHorizontal="2dp"
            android:text="导出数据库"
            android:id="@+id/output_db_btn"
            android:background="@drawable/big_round_bg"
            android:drawableTop="@drawable/database"
            android:paddingTop="30dp"
            style="@style/text_style"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/open_accessibility_btn"
        android:text="打开辅助功能"
        android:background="@drawable/big_round_bg"
        android:drawableTop="@drawable/assist"
        android:paddingTop="30dp"
        style="@style/text_style"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
        <Button
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:layout_marginHorizontal="2dp"
            android:text="更改服务器地址"
            android:id="@+id/set_host_ip_btn"
            android:background="@drawable/big_round_bg"
            android:drawableTop="@drawable/set_hostip"
            android:paddingTop="30dp"
            style="@style/text_style"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

</LinearLayout>