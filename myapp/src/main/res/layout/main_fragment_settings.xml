<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Settings"
    android:textSize="40dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <Button
           android:layout_width="170dp"
           android:layout_height="160dp"
           android:layout_marginHorizontal="15dp"
           android:id="@+id/clear_records_btn"
           android:text="清除数据"
           android:background="@drawable/setting_button"
           android:drawableTop="@drawable/delete"
           android:paddingTop="20dp"
           android:textSize="18dp"
           android:textFontWeight="200"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="10dp"

           />
    <Button
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/clear_pred_btn"
        android:text="清除预测"
        android:background="@drawable/setting_button"
        android:drawableTop="@drawable/delete"
        android:paddingTop="20dp"
        android:textSize="18dp"
        android:textFontWeight="200"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/post_records_btn"
        android:text="上传到服务器"
        android:background="@drawable/setting_button"
        android:drawableLeft="@drawable/server"
        android:paddingTop="20dp"
        android:textSize="18dp"
        android:textFontWeight="200"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="导出数据库"
            android:id="@+id/output_db_btn"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/database"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/open_accessibility_btn"
        android:text="打开辅助功能"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/assist"
        android:layout_marginBottom="10dp"
        />


</LinearLayout>