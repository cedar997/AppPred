<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Settings"
    android:textSize="40dp"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/clear_records_btn"

        android:text="清除数据"
        style="@style/style_SettingsButton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/clear_pred_btn"
        android:text="清除预测数据"
        style="@style/style_SettingsButton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/post_records_btn"
        android:text="上传数据到服务器"
        style="@style/style_SettingsButton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/open_accessibility_btn"
        android:text="打开辅助功能"
        style="@style/style_SettingsButton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="手动服务"
        android:visibility="invisible"
        android:id="@+id/start_service_btn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="导出数据库"
        android:id="@+id/output_db_btn"
        style="@style/style_SettingsButton"
        />
</LinearLayout>